{
  "name": "unsullied-api",
  "scripts": {
    "start": "dotenv -- nodemon -e ts,graphql -x ts-node src/index.ts",
    "example": "dotenv -- nodemon -e ts,graphql -x ts-node src/examples/thrash-cans/index.ts",
    "debug": "dotenv -- nodemon -e ts,graphql -x ts-node --inspect src/index.ts",
    "build": "rimraf dist && tsc",
    "pretest": "yarn run build",
    "test": "nyc ava --verbose",
    "coverage": "codecov"
  },
  "ava": {
    "files": [
      "test/**/*.js"
    ],
    "source": [
      "src/**/*.ts"
    ],
    "match": [],
    "concurrency": 5,
    "failFast": true,
    "failWithoutAssertions": false,
    "tap": false,
    "powerAssert": false
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "graphql-yoga": "1.17.4",
    "jsonwebtoken": "8.5.1",
    "prisma-client-lib": "^1.34.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/node": "10.14.8",
    "ava": "^2.0.0",
    "codecov": "^3.5.0",
    "dotenv-cli": "^2.0.0",
    "nodemon": "1.19.1",
    "nyc": "^14.1.1",
    "prisma": "1.34.0",
    "rimraf": "2.6.3",
    "ts-node": "7.0.1",
    "typescript": "3.2.2"
  }
}
